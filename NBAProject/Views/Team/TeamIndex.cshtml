@model IEnumerable<Team>

<h2>Teams</h2>
<div>
    <table class="table table-striped table-bordered table-condensed">
        <tr>

            <th>Team Name</th>
            <th>Conference</th>
            <th>Division</th>
            <th>Abbreviation</th>
            <th>Record</th>
            <th>Logo</th>
        </tr>

        @foreach (var team in Model)
        {
            <tr>
                <td><a href=/Team/ViewTeam/@team.TeamID>@team.TeamName</a></td>
                @{
                    switch (team.Conference)
                    {
                        case "East":
                            <td>
                                @team.Conference
                                <img src="~/img/east.png" width="50" />
                            </td>
                            break;
                        default:
                            <td>
                                @team.Conference
                                <img src="~/img/west.png" width="50" />
                            </td>
                            break;
                    }
                }

                <td>@team.Division</td>
                <td>@team.Abbreviation</td>
                <td>@team.Record</td>
                @{
                    switch (team.TeamID)
                    {
                        case 1:
                            <td><img src="/img/nets.jpg" alt="Nets Logo" width="150" /></td>
                            break;
                        case 3:
